<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!-- enter client specific config here -->
    <!-- When ShowErrorDetails is "True" the result message will include exception 
      details if the form fails to process.  Should be "False" when deployed for production use. -->
    <add key="ShowErrorDetails" value="True"/>
    <!-- When SavePXT is "True" a copy of the PXT file generated by the form submission 
      is saved to the network path specified in OutputDirectory below.  When "False", no local copy is saved. -->
    <add key="SavePXT" value="True"/>
    <!-- When SavePXT is "True", OutputDirectory specifies where to save the generated PXT file. Ensure
      this is a valid network path or local path. -->
    <add key="OutputDirectory" value="C:\IIS\Web Order Form\PXT Local"/>
    <!-- SuccessMessage is displayed to the user upon successfully processing the form submission. -->
    <add key="SuccessMessage"
      value="Thank you for your order.  We have received all of the information submitted and will begin work as soon as possible.  You should receive a confirmation email shortly."/>
    <!-- ErrorMessage is displayed to the user if the form submission fails for any reason -->
    <add key="ErrorMessage" value="We apologize but we have encountered an error processing your order."/>
    <!-- Notification and Confirmation emails are seen as being sent from EmailSender. -->
    <add key="EmailSender" value="cctc@crawfordtitle.com"/>
    <!-- EmailEnableSSL should be set to "True" if your SMTP server requires HTTPS based authentication, 
      otherwise it should be "False" -->
    <add key="EmailEnableSSL" value="True"/>
    <!-- ConfirmationEmailSubject is used as the subject line for the confirmation email sent to the 
      submitting customer. -->
    <add key="ConfirmationEmailSubject" value="Thank You for Your Order"/>
    <!-- ConfirmationEmailTemplate specifies what email template to use when generating the confirmation email to 
      send to the customer. -->
    <add key="ConfirmationEmailTemplate" value="Confirmation.email.html"/>
    <!-- NotificationEmailSubject is used as the subject line for the notification email sent to the 
      company when the form is submitted. -->
    <add key="NotificationEmailSubject" value="New Order - Web Order Entry"/>
    <!-- NotificationEmailTemplate specifies what email template to use when generating the notification email to 
      send to the company. -->
    <add key="NotificationEmailTemplate" value="Notification.email.html"/>
    <!-- NotificationRecipient specifies what company email address should receive the notification email. -->
    <add key="NotificationRecipient" value="admin@crawfordtitle.com"/>
    <!-- NotificationAttachPXT should be set to "True" if you want the generated PXT file included in the 
      notification email sent to the company, otherwise "False". -->
    <add key="NotificationAttachPXT" value="True"/>
    <!-- do not change these configuration items -->
    <add key="CONTACT" value="NOTES=Web Order Entry - Contact: "/>
  </appSettings>
  <connectionStrings/>
  <system.web>
    <!-- 
            Set compilation debug="true" to insert debugging 
            symbols into the compiled page. Because this 
            affects performance, set this value to true only 
            during development.
        -->
    <compilation debug="true" targetFramework="4.0"/>
    <!--
            The <authentication> section enables configuration 
            of the security authentication mode used by 
            ASP.NET to identify an incoming user. 
        -->
    <authentication mode="Windows"/>
    <!--
            The <customErrors> section enables configuration 
            of what to do if/when an unhandled error occurs 
            during the execution of a request. Specifically, 
            it enables developers to configure html error pages 
            to be displayed in place of a error stack trace.

        <customErrors mode="RemoteOnly" defaultRedirect="GenericErrorPage.htm">
            <error statusCode="403" redirect="NoAccess.htm" />
            <error statusCode="404" redirect="FileNotFound.htm" />
        </customErrors>
        -->
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
  </system.web>
  <!-- 
        The system.webServer section is required for running ASP.NET AJAX under Internet
        Information Services 7.0.  It is not necessary for previous version of IIS.
    -->
  <system.net>
    <mailSettings>
      <!-- Change from address and network settings below for local SMTP server -->
      <smtp from="cctc@crawfordtitle.com">
        <network host="smtp.gmail.com" port="587" userName="cctc@crawfordtitle.com" password="cctc2323"/>
      </smtp>
    </mailSettings>
  </system.net>
</configuration>